{% extends "base.html.twig" %}

{% block content %}
  {{form_start(loginForm, {'attr': { 'class':'form-signin'}})}}
    {{form_widget(loginForm.email, {'attr': { 'class':''}})}}
    {{form_widget(loginForm.password, {'attr': { 'class':''}})}}
    <input class="form-control" type="checkbox" id="remember_me" name="_remember_me" checked/>
    <label  for="remember_me">Remember me</label>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <button class="" type="submit">Log in</button>
  {{form_end(loginForm)}}
{% endblock %}